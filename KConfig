mainmenu "SPL Demo"

menu "SPL Extensions"
    source "modules/spl_extension_zip/Kconfig"
endmenu

menu "Linking"
    config LINK_OUT_FILE_BASENAME
        string "linker output file basename"
        default "my_main"
    
    config LINK_OUT_FILE_EXTENSIONS
        string "linker output file extensions as comma separated list"
        default "map,exe"

    config LINK_FILE_BASENAME
        string "linker output file basename"
        default "my_main"
endmenu

menu "Feature Model"
    config USE_COMPONENT_A_INTERFACE
        bool "this is the first feature"
        default n
    config USE_COMPONENT_B_INTERFACE
        bool "this is the second feature"
        default n
    config DUMMY_INTERFACE_DEFINED
        bool "this is the dummy feature"
        default y if USE_COMPONENT_A_INTERFACE || USE_COMPONENT_B_INTERFACE
    config PART_NUMBER
        string "part number"
        default "PN0013"
endmenu
